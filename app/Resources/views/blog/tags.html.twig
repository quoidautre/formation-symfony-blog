{% extends ':blog:layout.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <div id="welcome">
                <h1>Articles</h1>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <h4>Article(s) from <span class="label label-info">{{tag.title}}</span></h4>
                    <table class="table">
                        {% for article in articles %}
                            <tr>
                                <td>
                                    {{article.title}}
                                </td>
                                <td>
                                    {% if  article.image.url is defined %}
                                        <img src="{{article.image.url}}" alt="{{article.image.alt}}" width="50" height="50">
                                    {% endif %}
                                </td>
                            </tr>                           
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


